<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ExportPhotoActivity">

    <ImageView
        android:id="@+id/imageViewExport"
        android:layout_width="395dp"
        android:layout_height="564dp"
        android:scaleType="centerCrop" />

    <!-- Пример элементов интерфейса для экспорта фото -->
    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewExport"
        android:layout_marginTop="16dp"
        android:text="Поделиться в соцсетях" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnShare"
        android:layout_marginTop="16dp"
        android:text="Сохранить на телефон" />


</RelativeLayout>

